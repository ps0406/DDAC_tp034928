@model DDAC_TP034928.ViewModels.BookingViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<h4>Schedule</h4>

@using (Html.BeginForm("createBooking", "Booking", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.schedule.Id)
    @Html.HiddenFor(m => m.schedule.origin)
    @Html.HiddenFor(m => m.schedule.destination)
    @Html.HiddenFor(m => m.schedule.departureTime)
    @Html.HiddenFor(m => m.schedule.arrivalTime)
    
<div class="form-horizontal">

    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.booking.customerData.customerName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.booking.customerId, new SelectList(Model.customerList, "Id", "customerName"), "Select Customer", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.booking.customerId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.booking.cargoWeight, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.booking.cargoWeight, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.booking.cargoWeight, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.booking.amount, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.booking.amount, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.booking.amount, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Submit" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}